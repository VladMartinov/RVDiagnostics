<UserControl x:Class="RVDiagnostics.Views.ModelSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:RVDiagnostics.Converters"
             mc:Ignorable="d"
             Background="{StaticResource BgDark1}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="TileStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgDark3}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMediumOpacity}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource BrandRedBrush}"/>
                    <Setter Property="Background" Value="#172644"/>
                </Trigger>
                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="active">
                    <Setter Property="BorderBrush" Value="{StaticResource BrandRedBrush}"/>
                    <Setter Property="Background" Value="#172644"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuggestionItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLowOpacity}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#172644"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BrandRedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВЫЙ БЛОК со скроллом -->
        <ScrollViewer Grid.Column="0" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,4,0"
                      VerticalAlignment="Stretch">
            <StackPanel Orientation="Vertical">

                <!-- Выбор режима поиска -->
                <TextBlock Text="{DynamicResource Model.SelectionMode}"
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="13"
                           Margin="0,0,0,6"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Плитка "По марке и двигателю" -->
                    <Border x:Name="VehicleTile" 
                            Grid.Column="0" 
                            Margin="0,0,6,12"
                            Style="{StaticResource TileStyle}"
                            Tag="active">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Model.ByVehicle}"
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{DynamicResource Model.ByVehicle.Description}"
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Плитка "По коду ЭБУ" -->
                    <Border x:Name="EcuTile" 
                            Grid.Column="1" 
                            Margin="6,0,0,12"
                            Style="{StaticResource TileStyle}"
                            Tag="inactive">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Model.ByECU}"
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{DynamicResource Model.ByECU.Description}"
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Форма выбора по автомобилю -->
                <StackPanel x:Name="VehicleForm" Visibility="Visible">
                    <TextBlock Text="{DynamicResource Model.Make}"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="MakeComboBox">
                        <ComboBoxItem Content="{DynamicResource Brand.Ford}"/>
                    </ComboBox>

                    <TextBlock Text="{DynamicResource Model.Model}"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"
                               Margin="0,8,0,4"/>
                    <ComboBox x:Name="ModelComboBox" IsEnabled="False"/>

                    <TextBlock Text="{DynamicResource Model.Generation}"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"
                               Margin="0,8,0,4"/>
                    <ComboBox x:Name="GenerationComboBox" IsEnabled="False"/>

                    <TextBlock Text="{DynamicResource Model.Engine}"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"
                               Margin="0,8,0,4"/>
                    <ComboBox x:Name="EngineComboBox" IsEnabled="False"/>
                </StackPanel>

                <!-- Форма поиска по ECU -->
                <StackPanel x:Name="EcuForm" Visibility="Collapsed">
                    <TextBlock Text="{DynamicResource Model.ECU.Code}"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"
                               Margin="0,0,0,4"/>

                    <Grid>
                        <TextBox x:Name="EcuSearchBox"
                                 Style="{StaticResource RoundedTextBoxStyle}"
                                 Height="34"
                                 Padding="8,6"
                                 Foreground="{StaticResource TextPrimary}"
                                 Background="#0b1220"
                                 BorderBrush="{StaticResource BorderMediumOpacity}"
                                 FontSize="13"/>

                        <TextBlock Text="{DynamicResource Model.ECU.Placeholder}"
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=EcuSearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Динамические подсказки -->
                    <Border x:Name="SuggestionsBox"
                            Background="{StaticResource BgDark3}"
                            BorderBrush="{StaticResource BorderMediumOpacity}"
                            BorderThickness="1"
                            MaxHeight="140"
                            Margin="0,4,0,0"
                            Visibility="Collapsed"
                            CornerRadius="6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="2">
                            <ItemsControl x:Name="EcuSuggestionsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource SuggestionItemStyle}"
                                                MouseLeftButtonDown="SuggestionItem_MouseLeftButtonDown"
                                                Padding="10,6">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Code}"
                                                           Foreground="{StaticResource TextPrimary}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                           Foreground="{StaticResource TextMuted}"
                                                           FontSize="11"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="4,1"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Кнопка очистки -->
                <Button x:Name="ClearButton"
                        Content="{DynamicResource UI.Clear}"
                        Width="100"
                        Margin="0,16,0,20"
                        HorizontalAlignment="Left"
                        ToolTip="{DynamicResource Tooltip.Clear}"
                        Click="ClearSelection"/>

            </StackPanel>
        </ScrollViewer>

        <!-- ПРАВЫЙ БЛОК со скроллом -->
        <ScrollViewer Grid.Column="1" 
                      Margin="16,0,0,0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Stretch">
            <StackPanel>
                <TextBlock Text="{DynamicResource Info.Title}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,12"/>

                <!-- Горизонтальная строка с фото -->
                <Border Background="#0006"
                        BorderBrush="{StaticResource BorderLowOpacity}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0,0,0,16"
                        Height="260">
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Авто фото -->
                        <Border Grid.Column="0"
                                Margin="0,0,4,0"
                                ClipToBounds="True">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#0b1220" Offset="0"/>
                                    <GradientStop Color="#1f2937" Offset="0.5"/>
                                    <GradientStop Color="#0b1220" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <!-- Image с правильным Stretch -->
                                <Image x:Name="CarImage" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <!-- Опционально: индикатор загрузки -->
                                <Border x:Name="CarLoadingIndicator"
                                        Background="#80000000"
                                        Visibility="Collapsed">
                                    <TextBlock Text="Загрузка..."
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Разъем фото -->
                        <Border Grid.Column="1"
                                Margin="4,0,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#07121a" Offset="0"/>
                                    <GradientStop Color="#0f1a2b" Offset="0.5"/>
                                    <GradientStop Color="#07121a" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <!-- Image с правильным Stretch -->
                                <Image x:Name="ConnectorImage"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="8"/>

                                <!-- Опционально: индикатор загрузки -->
                                <Border x:Name="ConnectorLoadingIndicator"
                                        Background="#80000000"
                                        Visibility="Collapsed">
                                    <TextBlock Text="Загрузка..."
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Основные данные -->
                <Border Padding="0,0,0,8"
                        BorderBrush="{StaticResource BorderLowOpacity}"
                        BorderThickness="0,0,0,1"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Info.BasicData}"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="{DynamicResource Info.Make}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="BrandText"
                                       Grid.Row="0" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="{DynamicResource Info.Model}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="ModelText"
                                       Grid.Row="1" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="{DynamicResource Info.Years}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="YearsText"
                                       Grid.Row="2" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="{DynamicResource Info.Engine}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="EngineText"
                                       Grid.Row="3" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="{DynamicResource Info.ECU}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="EcuText"
                                       Grid.Row="4" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Диагностика -->
                <Border Padding="0,0,0,8"
                        BorderBrush="{StaticResource BorderLowOpacity}"
                        BorderThickness="0,0,0,1"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Info.Diagnostic}"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="{DynamicResource Info.Protocol}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="ProtocolText"
                                       Grid.Row="0" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="{DynamicResource Info.Connector}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <TextBlock x:Name="ConnectorText"
                                       Grid.Row="1" Grid.Column="1" 
                                       Text="{DynamicResource Default.NotSelected}" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="{DynamicResource Info.Tests}" 
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="13"
                                       Margin="0,0,8,6"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,6">
                                <ItemsControl x:Name="TestsList" 
                                                Margin="2,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" 
                                                        Margin="0,2,0,2"
                                                        VerticalAlignment="Center">
                                                <Ellipse Width="4" 
                                                            Height="4" 
                                                            Fill="{StaticResource BrandRedBrush}"
                                                            Margin="0,0,8,0"
                                                            VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding}" 
                                                            Foreground="{StaticResource TextPrimary}"
                                                            FontSize="13"
                                                            TextWrapping="Wrap"
                                                            VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Margin" Value="0,2,0,2"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Описание -->
                <Border Padding="0,0,0,8"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Info.Description}"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="DescriptionText"
                                   Text="{DynamicResource Info.DefaultDescription}"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка начала диагностики -->
                <Button x:Name="StartDiagnosticButton"
                        Content="{DynamicResource UI.StartDiagnostic}"
                        Style="{StaticResource PrimaryButton}"
                        Width="220"
                        Margin="0,0,0,20"
                        ToolTip="{DynamicResource Tooltip.StartDiagnostic}"
                        IsEnabled="False"
                        Click="StartDiagnostic"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>